<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/guide_line_activity_schedule_enroll_left_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1"/>

            <android.support.constraint.Guideline
                android:id="@+id/guide_line_activity_schedule_enroll_right_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9"/>

            <EditText
                android:id="@+id/edt_activity_schedule_enroll_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                app:layout_constraintRight_toLeftOf="@+id/btn_activity_schedule_enroll_datepicker"
                android:layout_marginTop="8dp"
                android:hint="날짜 선택"
                />

            <ImageButton
                android:id="@+id/btn_activity_schedule_enroll_datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/edt_activity_schedule_enroll_date"
                app:layout_constraintLeft_toRightOf="@+id/edt_activity_schedule_enroll_date"
                app:layout_constraintRight_toRightOf="@+id/guide_line_activity_schedule_enroll_right_vertical"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_today_black_48dp"
                />

            <EditText
                android:id="@+id/edt_activity_schedule_enroll_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edt_activity_schedule_enroll_date"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                app:layout_constraintRight_toRightOf="@+id/guide_line_activity_schedule_enroll_right_vertical"
                android:layout_marginTop="8dp"
                android:hint="Title"
                />

            <TimePicker
                android:id="@+id/tp_activity_schedule_enroll_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edt_activity_schedule_enroll_title"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                android:layout_marginTop="8dp"
                android:timePickerMode="spinner"
                />

            <TimePicker
                android:id="@+id/tp_activity_schedule_enroll_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tp_activity_schedule_enroll_start_time"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                android:layout_marginTop="8dp"
                android:timePickerMode="spinner"
                />

            <EditText
                android:id="@+id/edt_activity_schedule_enroll_start_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tp_activity_schedule_enroll_end_time"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                app:layout_constraintRight_toRightOf="@+id/guide_line_activity_schedule_enroll_right_vertical"
                android:layout_marginTop="8dp"
                android:hint="시작 지점(좌표)"
                />

            <EditText
                android:id="@+id/edt_activity_schedule_enroll_end_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edt_activity_schedule_enroll_start_point"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                app:layout_constraintRight_toRightOf="@+id/guide_line_activity_schedule_enroll_right_vertical"
                android:layout_marginTop="8dp"
                android:hint="종료 지점(좌표)"
                />

            <EditText
                android:id="@+id/edt_activity_schedule_enroll_way_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edt_activity_schedule_enroll_end_point"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                app:layout_constraintRight_toRightOf="@+id/guide_line_activity_schedule_enroll_right_vertical"
                android:layout_marginTop="8dp"
                android:hint="경유지(좌표)"
                />

            <EditText
                android:id="@+id/edt_activity_schedule_enroll_descriptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edt_activity_schedule_enroll_way_point"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                app:layout_constraintRight_toRightOf="@+id/guide_line_activity_schedule_enroll_right_vertical"
                android:layout_marginTop="8dp"
                android:hint="상세설명"
                />

            <Button
                android:id="@+id/btn_activity_schedule_enroll_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/edt_activity_schedule_enroll_descriptions"
                app:layout_constraintLeft_toLeftOf="@+id/guide_line_activity_schedule_enroll_left_vertical"
                app:layout_constraintRight_toRightOf="@+id/guide_line_activity_schedule_enroll_right_vertical"
                android:layout_marginTop="8dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="등 록"
                />


        </android.support.constraint.ConstraintLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>
