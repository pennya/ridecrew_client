        <TextView
            android:id="@+id/tv_fragment_schedule_detail_static_descriptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_fragment_schedule_detail_end_spot"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_schedule_detail_vertical_left"
            app:layout_constraintRight_toRightOf="@+id/guideline_fragment_schedule_detail_vertical_right"
            android:layout_marginTop="16dp"
            android:text="Detail"
            android:textColor="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/tv_fragment_schedule_detail_descriptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_fragment_schedule_detail_static_descriptions"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_schedule_detail_vertical_left"
            app:layout_constraintRight_toRightOf="@+id/guideline_fragment_schedule_detail_vertical_right"
            android:layout_marginTop="4dp"
            android:gravity="start|center_vertical"
            android:padding="4dp"
            android:background="@android:color/holo_purple"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btn_fragment_schedule_detail_join"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_fragment_schedule_detail_descriptions"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_schedule_detail_vertical_left"
            app:layout_constraintRight_toRightOf="@+id/guideline_fragment_schedule_detail_vertical_right"
            android:layout_marginTop="40dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="참가하기"/>

        <Button
            android:id="@+id/btn_fragment_schedule_detail_modify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_fragment_schedule_detail_join"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_schedule_detail_vertical_left"
            app:layout_constraintRight_toRightOf="@+id/guideline_fragment_schedule_detail_vertical_right"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="수정하기"/>

        <Button
            android:id="@+id/btn_fragment_schedule_detail_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_fragment_schedule_detail_modify"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_fragment_schedule_detail_vertical_left"
            app:layout_constraintRight_toRightOf="@+id/guideline_fragment_schedule_detail_vertical_right"
            android:layout_marginTop="8dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="취소하기"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>