<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#00e2c7</item>
        <item name="colorPrimary">#325287</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorControlHighlight">#FF8800</item>
        <item name="colorControlNormal">#000000</item>

        <!--
        환경설정할때 테마 설정안하면 에러남
        Unhandled Exception: Java.Lang.IllegalStateException: Must specify preferenceTheme in theme occurred
        -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!--Splash Screen theme.-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_mint</item>
    </style>

</resources>